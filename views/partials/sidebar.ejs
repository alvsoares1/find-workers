<!-- Sidebar -->
<div class="col-md-3 col-lg-2 sidebar p-3">
    <div class="d-flex align-items-center mb-4">
        <i class="fas fa-hard-hat me-2"></i>
        <h5 class="mb-0">Find Workers</h5>
    </div>
    
    <div class="user-info mb-4 text-center">
        <div class="user-avatar mx-auto mb-3">
            <%= user.name.charAt(0).toUpperCase() %>
        </div>
        <h6><%= user.name %></h6>
        <p class="small mb-0 opacity-75">
            <% if (user.userType === 'client') { %>
                <i class="fas fa-user-tie me-1"></i>Cliente
            <% } else { %>
                <i class="fas fa-hard-hat me-1"></i>Trabalhador
            <% } %>
        </p>
    </div>

    <nav class="nav flex-column">
        <a class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'dashboard' ? 'active' : '' %>" href="/dashboard">
            <i class="fas fa-tachometer-alt me-2"></i>Dashboard
        </a>
        <% if (user.userType === 'client') { %>
            <a class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'services' ? 'active' : '' %>" href="/services">
                <i class="fas fa-search me-2"></i>Buscar Serviços
            </a>
            <a class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'requests' ? 'active' : '' %>" href="/requests">
                <i class="fas fa-clipboard-list me-2"></i>Minhas Solicitações
            </a>
        <% } else { %>
            <a class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'services' ? 'active' : '' %>" href="/services">
                <i class="fas fa-tools me-2"></i>Meus Serviços
            </a>
            <a class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'requests' ? 'active' : '' %>" href="/requests">
                <i class="fas fa-briefcase me-2"></i>Solicitações Recebidas
            </a>
        <% } %>
        <a class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'profile' ? 'active' : '' %>" href="/profile">
            <i class="fas fa-user-edit me-2"></i>Perfil
        </a>
        <a class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'settings' ? 'active' : '' %>" href="/settings">
            <i class="fas fa-cog me-2"></i>Configurações
        </a>
        <hr class="my-3">
        <a class="nav-link" href="/logout">
            <i class="fas fa-sign-out-alt me-2"></i>Sair
        </a>
    </nav>
</div>
